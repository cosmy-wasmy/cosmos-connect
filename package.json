{
  "name": "cosmos-connect",
  "displayName": "Cosmos Connect",
  "description": "Connect to chains built on Cosmos-SDK",
  "publisher": "Spoorthi",
  "repository": "https://github.com/cosmy-wasmy/cosmos-connect",
  "license": "SEE LICENSE IN LICENSE",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Debuggers",
    "Testing",
    "Other"
  ],
  "keywords": [
    "cosmos",
    "cosmos-sdk",
    "tendermint"
  ],
  "preview": true,
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cosmos-connect.queryTx",
        "title": "Query Tx",
        "category": "Cosmos Connect"
      },
      {
        "command": "cosmos-connect.queryNodeInfo",
        "title": "Query Node Info",
        "category": "Cosmos Connect"
      },
      {
        "command": "cosmos-connect.queryLatestBlock",
        "title": "Query Latest Block",
        "category": "Cosmos Connect"
      },
      {
        "command": "cosmos-connect.queryBlockByHeight",
        "title": "Query Block By Height",
        "category": "Cosmos Connect"
      },
      {
        "command": "cosmos-connect.queryAllModuleAccounts",
        "title": "Query All Module Accounts",
        "category": "Cosmos Connect"
      },
      {
        "command": "cosmos-connect.queryAllDenomsMetadata",
        "title": "Query All Denoms Metadata",
        "category": "Cosmos Connect"
      },
      {
        "command": "cosmos-connect.subscribeToNewBlock",
        "title": "Subscribe To New Blocks",
        "category": "Cosmos Connect"
      },
      {
        "command": "cosmos-connect.unsubscribeFromNewBlock",
        "title": "Unsubscribe From New Blocks",
        "category": "Cosmos Connect"
      }
    ],
    "configuration": [
      {
        "title": "Cosmos Connect",
        "properties": {
          "cosmos-connect.rest": {
            "type": "string",
            "default": "https://api.mainnet.archway.io/",
            "description": "REST API URL of the chain",
            "title": "REST API URL"
          }
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "cosmos-connect.subscribeToNewBlock",
          "when": "view == blocks",
          "group": "inline"
        }
      ]
    },
    "views": {
      "cosmos-connect":[
        {
          "id": "blocks",
          "name": "Blocks",
          "type": "tree",
          "visibility": "visible",
          "icon": "images/icon.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cosmos-connect",
          "title": "Cosmos Connect",
          "icon": "images/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "blocks",
        "contents": "Subscribe to new blocks on the chain. \n [Subscribe](command:cosmos-connect.subscribeToNewBlock)"
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.98.0",
    "@types/webpack-env": "^1.18.8",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-web": "^0.0.67",
    "@vscode/vsce": "^3.2.2",
    "assert": "^2.1.0",
    "eslint": "^9.21.0",
    "mocha": "^11.1.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "fetch": "^1.1.0",
    "ws": "^8.18.1"
  }
}
